<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:text="Question 1"
        android:textSize="20sp"
        android:textColor="#131b37"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/item_question_text"
        android:layout_width="wrap_content"
        android:text="Single Correct Answer Type"
        android:textSize="13sp"
        android:textColor="#131b37"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:text="Which is the world's largest desert?"
        android:textColor="#131b37"
        android:textSize="25sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/option_background"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="12dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="A."
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#131b37"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="Thar Desert"
            android:layout_marginStart="7dp"
            android:textSize="17sp"
            android:textColor="#131b37"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/option_background"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="12dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="B."
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#131b37"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="Sahara Desert"
            android:layout_marginStart="7dp"
            android:textSize="17sp"
            android:textColor="#131b37"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/option_background"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="12dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="C."
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#131b37"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="Gobi Desert"
            android:layout_marginStart="7dp"
            android:textSize="17sp"
            android:textColor="#131b37"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/option_background"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="12dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="D."
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#131b37"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="Antarctica"
            android:layout_marginStart="7dp"
            android:textSize="17sp"
            android:textColor="#131b37"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>